= form_for [:admin, @rebate_form] do |f|
  - show_fields = ['income','dependants', 'full_name', 'lived_here_before_july_2018', 'has_home_business', 'email', 'phone_number', 'email_phone_can_be_used']
  - @rebate_form.fields.each do |item|
    - show_fields.each do |hf|
      - if hf == item.first
        = f.label item.first
        = f.text_field(item.first, :value => item.last)


  - if @rebate_form.errors.any?
    #error_explanation
      %h2 #{pluralize(@rebate_form.errors.count, "error")} prohibited this admin_rebate_form from being saved:
      %ul
        - @rebate_form.errors.full_messages.each do |message|
          %li= message

  .actions
    = f.submit 'Save'
