- if @rebate_form.can_process?
  = link_to admin_process_rebate_form_path(id: @rebate_form.id), class: 'rebate-form__action--process', action: :create, method: :post do
    .nav-item
      .flex.action-icon
        = image_tag('process.svg', class: 'rebate-header-icon')
      .flex
        Process
- if @rebate_form.processed_state?
  = link_to admin_unprocess_rebate_form_path(id: @rebate_form.id), class: 'rebate-form__action--unprocess', action: :destroy, method: :delete do
    .nav-item
      .flex.action-icon
        = image_tag('unprocess.svg', class: 'rebate-header-icon')
      .flex
        Unprocess

