%p#notice= notice



.pure-g
  .pure-u-1-3
    %h3 Valuation id
    %p= @rebate_form.valuation_id

    - if @rebate_form.property.present?
      %h3 Address
      %addr
        = @rebate_form.property.location
        %br/
        = @rebate_form.property.suburb
        %br/
        = @rebate_form.property.town_city

      = render 'rates_bills', rates_bills: @rebate_form.property.rates_bills

  .pure-u-1-3
    = render 'fields', fields: @rebate_form.fields

  .pure-u-1-3
    %h3 Signatures
    - if @rebate_form.fully_signed?
      = render 'signatures'
    - else
      = render 'sign_button', rebate_form: @rebate_form
%p
  = link_to 'Back', admin_rebate_forms_path
